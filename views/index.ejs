<%- include("./partials/header") %>
<div class="ui main text container">
	<div class="ui huge header">BLOGS-O-MANIA</div>
		<div class="ui top attached segment">
			<div class="ui divideed items">
				<%blogs.forEach(function(blog){%>
					<div class="item">
						<div class="image">
  							<img class="ui image" src='<%=blog.image%>'>
						</div>
						<div class="content">
							<a class="header" href="/blogs/<%=blog._id%>"><%=blog.title%></a>
							<div class="meta">
      							<span class="date">Created <%=blog.created.toDateString()%></span>
    						</div>
							
							<div class="description">
								  <p> <%=blog.content.substring(0,100)%>......  </p>
   							</div>
							<div class="extra">
								<a class="ui floated basic violet button" href="/blogs/<%=blog._id%>">
									Read More <i class="right chevron icon"></i>
								</a>
							</div>
						</div>
					</div> 
				<%});%>
			</div>
	</div>
</div>
		

<%- include("./partials/footer") %>